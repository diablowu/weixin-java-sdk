# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,css,html,json,yml,xml}]
indent_style = space
indent_size = 2

[*.{java}]
indent_style = space
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab